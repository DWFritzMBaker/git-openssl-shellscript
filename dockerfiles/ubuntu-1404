FROM ubuntu:14.04
RUN apt update && \
  apt -y install sudo

#RUN sed -Ei 's/^# deb-src /deb-src /' /etc/apt/sources.list
#RUN apt update

RUN apt install build-essential autoconf -y
RUN apt install libcurl4-openssl-dev tcl-dev gettext asciidoc -y
RUN apt install docbook2x -y
RUN apt install install-info -y

# Note, I'm intentionally not running 'rm -rf /var/lib/apt/lists/*' to help speed up test time of the script which will re-generate those caches.